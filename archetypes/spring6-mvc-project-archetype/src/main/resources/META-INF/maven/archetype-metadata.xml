<?xml version="1.0" encoding="UTF-8"?>
<archetype-descriptor
  xmlns="https://maven.apache.org/plugins/maven-archetype-plugin/archetype-descriptor/1.1.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="https://maven.apache.org/plugins/maven-archetype-plugin/archetype-descriptor/1.1.0 https://maven.apache.org/xsd/archetype-descriptor-1.1.0.xsd"
  name="spring3-mvc-project-archetype">
  <requiredProperties>
    <requiredProperty key="version">
      <defaultValue>1.0.0-SNAPSHOT</defaultValue>
    </requiredProperty>
  </requiredProperties>

  <fileSets>
    <!-- src/main/java -->
    <fileSet filtered="true" packaged="true" encoding="UTF-8">
      <directory>src/main/java</directory>
      <includes>
        <include>**/*.java</include>
      </includes>
    </fileSet>

    <!-- src/test/java -->
    <fileSet filtered="true" packaged="true" encoding="UTF-8">
      <directory>src/test/java</directory>
      <includes>
        <include>**/*.java</include>
      </includes>
    </fileSet>

    <!-- src/main/resources -->
    <fileSet filtered="true" packaged="false" encoding="UTF-8">
      <directory>src/main/resources</directory>
      <includes>
        <include>**/*.xml</include>
        <include>**/org.springframework.web.WebApplicationInitializer</include>
      </includes>
    </fileSet>

    <!-- src/test/resources -->
    <fileSet filtered="true" packaged="false" encoding="UTF-8">
      <directory>src/test/resources</directory>
      <includes>
        <include>**/*.xml</include>
      </includes>
    </fileSet>

    <!-- src/main/webapp -->
    <fileSet filtered="true" encoding="UTF-8">
      <directory>src/main/webapp</directory>
      <includes>
        <include>**/*.xml</include>
        <include>**/*.jsp</include>
      </includes>
    </fileSet>

    <!-- src/main/webapp/resources -->
    <fileSet filtered="false" encoding="UTF-8">
      <directory>src/main/webapp/resources</directory>
    </fileSet>
  </fileSets>
</archetype-descriptor>